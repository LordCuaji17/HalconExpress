<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/toolbarPersonalizada"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#0E1D35"
        android:paddingHorizontal="16dp"
        android:elevation="4dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/btnAtras"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_revert"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            tools:ignore="ContentDescription"
            app:tint="#FFFFFF"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mapa de Rutas"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_marginStart="32dp"
            android:layout_toEndOf="@id/btnAtras"/>

        <Button
            android:id="@+id/btnOpcionesMapa"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:text="Mapa"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:minWidth="0dp"
            android:padding="0dp"
            android:textAllCaps="false" />

    </RelativeLayout>

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbarPersonalizada" />

    <Button
        android:id="@+id/btnCargarRutas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cargar rutas"
        android:backgroundTint="#FFFFFF"
        android:textColor="#0E1D35"
        android:textStyle="bold"
        android:elevation="6dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardInfoParada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbarPersonalizada"
        android:layout_margin="16dp"
        android:visibility="gone"
        app:cardCornerRadius="16dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="#FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <Button
                android:id="@+id/btnCerrarInfo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="X"
                android:textSize="12sp"
                android:textColor="#000000"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toStartOf="@id/btnCerrarInfo">

                <TextView
                    android:id="@+id/txtNombreParada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre de la Parada"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#0E1D35" />

                <TextView
                    android:id="@+id/txtUbicacionParada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DirecciÃ³n detallada..."
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginTop="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:id="@+id/txtTiempoViaje"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-- min"
                        android:textStyle="bold"
                        android:textColor="#0E1D35"
                        android:drawablePadding="6dp"
                        app:drawableStartCompat="@android:drawable/ic_menu_recent_history"
                        app:drawableTint="#0E1D35"/>

                    <Space
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/txtDistanciaViaje"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-- km"
                        android:textStyle="bold"
                        android:textColor="#0E1D35"
                        android:drawablePadding="6dp"
                        app:drawableStartCompat="@android:drawable/ic_menu_mapmode"
                        app:drawableTint="#0E1D35"/>

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>