<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/toolbarPersonalizada"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#0E1D35"
        android:paddingHorizontal="16dp"
        android:elevation="4dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/btnAtras"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_revert"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            tools:ignore="ContentDescription"
            android:tint="#FFFFFF"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mapa de Rutas"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_marginStart="32dp"
            android:layout_toEndOf="@id/btnAtras"/>

        <Button
            android:id="@+id/btnOpcionesMapa"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:text="Mapa"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:minWidth="0dp"
            android:padding="0dp"
            android:textAllCaps="false" />

    </RelativeLayout>

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbarPersonalizada" />

    <Button
        android:id="@+id/btnCargarRutas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cargar rutas"
        android:backgroundTint="#FFFFFF"
        android:textColor="#0E1D35"
        android:textStyle="bold"
        android:elevation="6dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"/>

</RelativeLayout>